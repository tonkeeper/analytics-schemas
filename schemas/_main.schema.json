{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$defs": {
    "AnalyticsEvent": {
      "type": "object",
      "properties": {
        "os_name": { 
          "type": "string",
          "enum": ["ios", "android", "windows", "linux", "macos"],
          "description": "The operating system name where the event occurred"
        },
        "timestamp": { 
          "type": "string", 
          "format": "date-time",
          "description": "ISO 8601 timestamp when the event was recorded (device time)"
        },
        "session_id": {
          "type": "string",
          "format": "uuid",
          "description": "Random UUID updated every 30 min"
        },
        "firebase_user_id": {
          "type": "string",
          "description": "To get it from firebase"
        }
      },
      "required": ["os_name", "timestamp", "session_id", "firebase_user_id"]
    }
  }
} 